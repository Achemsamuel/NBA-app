<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fontFamily="sans-serif-condensed"
    tools:context="com.example.android.nbafinal.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.8"
        android:background="@drawable/c" >
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="40dp">


       <LinearLayout
           android:id="@+id/hey"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <ImageView
               android:layout_width="150dp"
               android:layout_height="120dp"
               android:scaleType="fitStart"
               android:src="@drawable/m" />
           <ImageView
               android:layout_width="150dp"
               android:layout_height="120dp"
               android:layout_gravity="center_horizontal"
               android:layout_marginStart="80dp"
               android:scaleType="fitStart"
               android:src="@drawable/bull"
              />
       </LinearLayout>

        <LinearLayout
            android:id="@+id/heya"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hey">

            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="119dp"
                android:layout_height="wrap_content"
                android:paddingLeft="40dp"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="70sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="50dp"
                android:text="-"
                android:textColor="#ffffff"
                android:textSize="80sp"
                />

            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:paddingLeft="60dp"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="70sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hey"
            android:layout_marginTop="150dp"
            android:gravity="center">

            <Button
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:onClick="addThreeA"
                android:text="+3 Points"

                android:visibility="visible" />
            <Button
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:onClick="addThreeB"
                android:text="+3 Points"
                android:visibility="visible" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hey"
            android:layout_marginTop="200dp"
            android:gravity="center">

            <Button
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:onClick="addTwoA"
                android:text="+2 POINTS" />
            <Button
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:onClick="addTwoB"
                android:text="+2 POINTS"
                android:visibility="visible" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hey"
            android:layout_marginTop="250dp"
            android:gravity="center">

            <Button
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:onClick="freeThrowA"
                android:text="FREE THROW"
                android:visibility="visible" />
            <Button
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:onClick="freeThrowB"
                android:text="FREE THROW"
                android:visibility="visible" />
        </LinearLayout>

        <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:onClick="reset"
            android:text="RESET" />


    </RelativeLayout>


</FrameLayout>
